<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="396.0" prefWidth="524.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.newRequestController">
    <center>
        <AnchorPane BorderPane.alignment="CENTER">
                <VBox layoutX="42.0" layoutY="53.0" prefHeight="201.0" prefWidth="441.0">
                        <Label text="Request Description ">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </Label>
                        <TextField fx:id="requestTextField" prefHeight="124.0" prefWidth="441.0" promptText="Enter text here">
                            <VBox.margin>
                                <Insets bottom="5.0" />
                            </VBox.margin>
                        </TextField>
                        <Button fx:id="createRequestButton" mnemonicParsing="false" onAction="#createRequestButtonOnAction" prefHeight="27.0" prefWidth="195.0" text="Create Request">
                            <VBox.margin>
                                <Insets left="110.0" top="10.0" />
                            </VBox.margin>
                        </Button>
                </VBox>
         <Label fx:id="statusLabel" layoutX="129.0" layoutY="273.0" prefHeight="17.0" prefWidth="268.0" textFill="RED" />
        </AnchorPane>
    </center>
    <top>
        <Button fx:id="goBackButton" mnemonicParsing="false" onAction="#goBackButtonOnAction" text="Go Back" BorderPane.alignment="BOTTOM_LEFT">
            <BorderPane.margin>
                <Insets left="15.0" top="15.0" />
            </BorderPane.margin>
        </Button>
    </top>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="396.0" prefWidth="524.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.RegisterController">
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <VBox layoutX="42.0" layoutY="53.0" prefHeight="201.0" prefWidth="441.0">
               <children>
                  <Label text="Username ">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <TextField fx:id="usernameTextField" promptText="Username">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </TextField>
                  <Label text="Password">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <TextField fx:id="passwordTextField" promptText="Password">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </TextField>
                  <Label text="Confirm Password">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <TextField fx:id="confirmPasswordTextField" promptText="Password">
                     <VBox.margin>
                        <Insets bottom="5.0" />
                     </VBox.margin>
                  </TextField>
                  <Button fx:id="createAccountButton" mnemonicParsing="false" onAction="#createAccountButtonOnAction" prefHeight="27.0" prefWidth="195.0" text="Register">
                     <VBox.margin>
                        <Insets left="110.0" top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Label fx:id="statusLabel" prefHeight="17.0" prefWidth="489.0" text="Label" textFill="RED" visible="false">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </center>
   <top>
      <Button fx:id="goBackButton" mnemonicParsing="false" onAction="#goBackButtonOnAction" text="Go Back" BorderPane.alignment="BOTTOM_LEFT">
         <BorderPane.margin>
            <Insets left="15.0" top="15.0" />
         </BorderPane.margin>
      </Button>
   </top>
</BorderPane>
